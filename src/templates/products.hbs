<div class="col l-2-4 m-4 c-6">
  <!-- Product item -->
  <a class="home-product-item" href="/products/show/{{slug}}">
    <div
      class="home-product-item__img"
      style="background-image: url(data:{{image.[0].contentType}};base64,{{image.[0].data}});">
    </div>
    <h4 class="home-product-item__name">{{name}}</h4>
    <div class="home-product-item__price">
      <span class="home-product-item__price-old">{{showPrice price 0}}</span>
      <span class="home-product-item__price-current">{{showPrice price salePrice}}</span>
    </div>
    <div class="home-product-item__action">
      <span class="home-product-item__like home-product-item__like--liked">
        <i class="home-product-item__like-icon-empty far fa-heart"></i>
        <i class="home-product-item__like-icon-fill fas fa-heart"></i>
      </span>
      <div class="home-product-item__rating">
        <i class="home-product-item__star--gold fas fa-star"></i>
        <i class="home-product-item__star--gold fas fa-star"></i>
        <i class="home-product-item__star--gold fas fa-star"></i>
        <i class="home-product-item__star--gold fas fa-star"></i>
        <i class="fas fa-star"></i>
      </div>
      <span class="home-product-item__sold">88 đã bán</span>
    </div>

    <div class="home-product-item__origin">
      <span class="home-product-item__brand">{{brand}}</span>
      <span class="home-product-item__origin-name">{{country}}</span>
    </div>
    <div class="home-product-item__favourite">
      <i class="fas fa-check"></i>
      <span>Yêu thích</span>
    </div>
    <div class="home-product-item__sale-off">
      <span class="home-product-item__sale-off-percent"
        >{{salePecents price salePrice}}</span>
      <span class="home-product-item__sale-off-label">GIẢM</span>
    </div>
  </a>
</div>
